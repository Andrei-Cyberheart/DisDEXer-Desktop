<Window x:Class="CloseAnApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloseAnApp"
        mc:Ignorable="d"
        Title="Close an App" Height="250" Width="350" ResizeMode="NoResize" Background="#FF7B7B7B">
    <Grid Margin="10,21,23,166" Cursor="Arrow">
        <TextBox x:Name="textFieldBreak" RenderTransformOrigin="0.500,0.500" Margin="6,-9,159,18" FontSize="20"/>
        <TextBox x:Name="textFieldLastTime" RenderTransformOrigin="0.500,0.500" Margin="165,-9,0,18" FontSize="20"/>
        <Button x:Name="ButtonOK" Margin="0,148,0,-148" Content="OK" Click="ButtonOK_Click"></Button>
        <Button x:Name="ButtonBreakUp" Margin="6,33,235,-34"></Button>
        <Button x:Name="ButtonBreakDown" Margin="82,33,159,-34"/>
        <Button x:Name="ButtonLastTimeUp" Margin="165,33,76,-34"/>
        <Button x:Name="ButtonLastTimeDown" Margin="241,33,0,-34"/>
        <ProgressBar x:Name="ProgressBar" Margin="3,86,-3,-57" Value="25" SmallChange="0" Foreground="#FF7B3FD6" Background="#FFB9ABAB"></ProgressBar>
        <Label x:Name="LabelTime" Margin="6,109,0,-96" Content="Text Example"></Label>
    </Grid>
</Window>
